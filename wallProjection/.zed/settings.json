{
  "languages": {
    "C++": {
      "tab_size": 4,
      "hard_tabs": true,
      "format_on_save": "off"
    },
    "C": {
      "tab_size": 4,
      "hard_tabs": true,
      "format_on_save": "off"
    }
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd",
        "arguments": [
          "--background-index",
          "--background-index-priority=low",
          "--clang-tidy=false",
          "--header-insertion=never",
          "--completion-style=detailed",
          "--pch-storage=memory",
          "--limit-references=500",
          "--limit-results=100"
        ]
      }
    }
  }
}
